
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{
    <link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
    <script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
    <script type="text/javascript">
        $(function () {
            jQuery(".fancybox").fancybox();
        });
    </script>
    }

@model IEnumerable<ZeonTicaret.WebUI.Models.Marka>

<section class="panel">
    <br /><br /> <br /><br />
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/MarkaEkle" id="editable-sample_new" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>
                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="icon-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div> <br /> <br />
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Resmi Göster</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                        <tr class="">
                            <td>@marka.Adi</td>
                            <td>@marka.Aciklama</td>
                            <td>
                            @if (marka.Resim != null)
                            {
                                <a class="fancybox" rel="group" href="@marka.Resim.OrtaYol">Resim Göster <i class="icon-plus"></i></a>
                            }
                            </td>
                            <td><a class="edit" href="/Admin/MarkaGuncelle/@marka.Id">Düzenle <i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/MarkaSil/@marka.Id">Sil <i class="icon-trash"></i></a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>