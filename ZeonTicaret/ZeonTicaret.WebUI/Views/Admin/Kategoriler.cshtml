
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Kategori>

<section class="panel">
    <br /><br /> <br /><br />
    <header class="panel-heading">
        Kategoriler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/KategoriEkle" id="editable-sample_new" class="btn btn-success">
                        Yeni Kategori <i class="icon-plus"></i>
                    </a>
                </div>
                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="icon-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div> <br /> <br />
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kategori in Model)
                    {
                        <tr class="">
                            <td>@kategori.Adi</td>
                            <td>@kategori.Aciklama</td>
                            <td><a class="edit" href="/Admin/KategoriGuncelle/@kategori.Id">Düzenle <i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/KategoriSil/@kategori.Id">Sil <i class="icon-trash"></i></a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>